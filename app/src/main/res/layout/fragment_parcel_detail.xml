<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.gilbre.app.gilbre.ParcelDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/print_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/print_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/print_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/print_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/print_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/print_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/print_amount"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/print_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <Button
    android:id="@+id/print_disconnect"
    android:layout_width="200dp"
    android:gravity="center_horizontal|center_vertical"
    android:text="Disconnect"
    android:background="@color/colorAccent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/print_connect"
        android:layout_width="200dp"

        android:gravity="center_horizontal|center_vertical"
        android:text="Connect"
        android:background="@android:color/holo_green_dark"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>
    <Button
    android:id="@+id/print_print"
    android:layout_width="200dp"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal|center_vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:text="PRINT"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"/>
</LinearLayout>
